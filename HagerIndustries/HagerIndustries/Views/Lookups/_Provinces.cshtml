<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="Provinces">Provinces</h4>
    <div class="card-body">
        <div class="form-group">
            <label class="control-label"></label>
            <select id="CountryID" name="CountryID" class="form-control" asp-items="ViewBag.CountryID">
                <option value="">--Select Country--</option>

            </select>
        </div>
        @Html.DropDownList("ProvincesID", null, htmlAttributes: new { @size = 12, @class = "form-control" })
    </div>
    <div class="card-footer">
        <a asp-controller="Provinces" asp-action="Create">Create</a> |
        <a asp-controller="Provinces" asp-action="Edit" class="linkClick">Edit</a> |
        <a asp-controller="Provinces" asp-action="Delete" class="linkClick">Delete</a>
    </div>
</div>
    <script type="text/javascript">
        $("#CountryID").on("change", function () {
            loadProvince(true);

        });
    </script>
