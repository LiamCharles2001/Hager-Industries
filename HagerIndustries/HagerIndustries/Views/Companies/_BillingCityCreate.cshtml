@model HagerIndustries.Models.City
<form asp-action="Create" asp-controller="Cities" id="createBillingCityForm">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cityName" class="control-label"></label>
                <input asp-for="cityName" class="form-control" />
                <span asp-validation-for="cityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceID" class="control-label"></label>
                <select asp-for="ProvinceID" id="tempCountry" class="form-control" asp-items="ViewBag.BillingProvinceID">
                    <option value="">--Select Province--</option>
                </select>
                <span asp-validation-for="ProvinceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitCreateBillingCity" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
