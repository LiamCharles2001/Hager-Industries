@page
@model ForgotPasswordModel
@{ ViewData["Title"] = "Forgot your password?"; }

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-lg">
            <div class="card-body">
                <div id="destination" class="card-title p-3 rounded-circle">
                    <img id="hager-logonew" style="height:90%;width:90%" src="/assets/img/JPG/Main-HagerIndustries_Logo.jpg" alt="Hager Industries Inc. logo">
                </div>
                <section>
                    <h1>@ViewData["Title"]</h1>
                    <h4>Enter your email.</h4>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>$(document).ready(function () {
        $("#hager-logo").addClass("hidden");
    });</script>
}




