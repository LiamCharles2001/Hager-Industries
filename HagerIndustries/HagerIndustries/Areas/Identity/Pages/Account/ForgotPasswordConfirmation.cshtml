@page
@model ForgotPasswordConfirmation
@{ ViewData["Title"] = "Forgot password confirmation"; }


<div class="row">
    <div class="col-md-4">
        <div class="card shadow-lg">
            <div class="card-body">
                <div id="destination" class="card-title p-3 rounded-circle">
                    <img id="hager-logonew" style="height:90%;width:90%" src="/assets/img/JPG/Main-HagerIndustries_Logo.jpg" alt="Hager Industries Inc. logo">
                </div>
                <section>
                    <h1>@ViewData["Title"]</h1>
                    <p>
                        Please check your email to reset your password.
                    </p>
                    <p>Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to continue.</p>
                </section>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>$(document).ready(function () {
        $("#hager-logo").addClass("hidden");
    });</script>
}

